<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SiltButton" >
        android:id="@+id/silt_button2"
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/silt_button_silver</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:drawableEnd">@drawable/silt_blue_small</item>
        <item name="android:drawableRight">@drawable/silt_blue_small</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:text">@string/verify_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
    </style>
    <style name="SiltButtonBlue"  parent="@style/SiltButton">
        <item name="android:background">@drawable/silt_button_blue</item>
        <item name="android:drawableEnd">@drawable/silt_white_small</item>
        <item name="android:drawableRight">@drawable/silt_white_small</item>
        <item name="android:text">@string/verify_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
